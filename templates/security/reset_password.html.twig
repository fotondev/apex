{% extends '/security/layout.html.twig' %}


{% block body %}
    <div class="auth-flex-container">
        <div class="lostpass-form-container">
            <nav class="navbar navbar-default">
                <div class="container-fluid" style="text-align: center">
                    <div class="navbar-header" style="float: none;">
                        <a class="navbar-brand logo" href="/"
                           style="padding-top: 18px;padding-bottom: 18px;height: 58px;">
                            <span>APEX</span></a>
                    </div>
                </div>
            </nav>
            <div class="lostpass-form">
                <form action="{{ path('security_reset_password_handle') }}" method="post">
                    <h3 class="text-center">Reset Password</h3>
                    <div class="form-group w100">
                        <div class="form-group w100">
                            <input type="password" class="form-control" id="password" name="password"
                                   required="required">
                            <label for="password" class="control-label">Password</label>
                        </div>
                        <div class="form-group w100">
                            <input type="password" class="form-control" id="confirm_password" name="confirm_password"
                                   required="required">
                            <label for="confirm_password" class="control-label">Confirm Password</label>
                        </div>
                        <input type="hidden" id="lostpass_token" name="lostpass_token" value="{{ lostpassToken }}">
                    </div>
                    <div class="text-center">
                        <button type="button" class="btn btn-primary" id="update_pass">Change</button>
                    </div>
                </form>
                <div id="form_successful" class="text-center" style="display: none">
                    Password changed successfully.
                </div>
            </div>
        </div>
    </div>
{% endblock %}

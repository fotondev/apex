{% extends 'dashboard/layout.html.twig' %}

{% block body %}
    <div class="container content-body">
    {{ form_start(form) }}
    <div class="race-config">
        <h2 class="text-center">Quick Race</h2>
        <div class="card mt-3">
            <div class="card-body">
                <div class="form-group row"> {{ form_label(form.track, null, {'label_attr': {'class': 'col-sm-6 col-form-label'}}) }}
                    <div class="col-sm-5"> {{ form_widget(form.track, {'attr': {'class': 'form-control'}}) }} </div>
                </div>
                <div class="form-group row mt-3"> {{ form_label(form.carGroup, null, {'label_attr': {'class': 'col-sm-6 col-form-label'}}) }}
                    <div class="col-sm-5"> {{ form_widget(form.carGroup, {'attr': {'class': 'form-control'}}) }} </div>
                </div>
                <div class="mt-3">
                    <h4>Qualifying</h4>
                    <div class="form-group row">
                        {{ form_label(form.qualyTime, null, {'label_attr': {'class': 'col-sm-6 col-form-label'}}) }}
                        <div class="col-sm-5">
                            {{ form_widget(form.qualyTime, {'attr': {'class': 'form-control' ~ (form_errors(form.qualyTime)|length > 0 ? ' is-invalid' : '')}}) }}
                            <div class="text-danger">
                                {{ form_errors(form.qualyTime) }}
                            </div>
                        </div>
                    </div>

                    <h4>Race</h4>
                    <div class="form-group row">
                        {{ form_label(form.raceTime, null, {'label_attr': {'class': 'col-sm-6 col-form-label'}}) }}
                        <div class="col-sm-5">
                            {{ form_widget(form.raceTime, {'attr': {'class': 'form-control' ~ (form_errors(form.raceTime)|length > 0 ? ' is-invalid' : '')}}) }}
                            <div class="text-danger">
                                {{ form_errors(form.raceTime) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="mt-3">
            {{ form_errors(form) }}
        </div>
        {{ form_widget(form.start) }}
        {{ form_end(form) }}
    </div>
{% endblock %}